{
  "name": "my-garage",
  "version": "0.0.1",
  "engines": {
    "node": "^16.9.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "repository": "https://github.com/mjcarterdev/MyGarageProject.git",
  "contributors": [
    {
      "name": "Michael Carter"
    },
    {
      "name": "Sergey Ushakov",
      "email": "sergey@ushakov.io"
    }
  ],
  "private": true,
  "scripts": {
    "lint": "lerna run lint",
    "prepare": "husky install",
    "dev:admin": "yarn workspace garage-admin run dev",
    "dev:timebooking": "yarn workspace garage-timebooking run dev",
    "dev:backend": "yarn workspace garage-backend run dev",
    "dev": "concurrently --names admin,timebooking,backend \"yarn dev:admin\" \"yarn dev:timebooking\" \"yarn dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typescript": "^4.4.4"
  }
}
